<UserControl x:Class="FamilyShow.Controls.FamilyData.IndividualEventDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:FamilyShowLib="clr-namespace:FamilyShowLib;assembly=FamilyShowLib"
             xmlns:local="clr-namespace:FamilyShow.Controls.FamilyData"
             xmlns:converters="clr-namespace:FamilyShow"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- Converter for formatting dates to short date format -->
        <converters:DateFormattingConverter x:Key="DateFormattingConverter" />

        <!-- Converter for showing/hiding features based on boolean property -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel>
        <!-- Date Label Row -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Column="0"
                   x:Name="DateLabel"
                   MouseEnter="Label_MouseEnter"
                   MouseLeave="Label_MouseLeave"
                   Content="{Binding DateLabelText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   MouseLeftButtonUp="ChangeDateDescriptorForward"
                   MouseRightButtonUp="ChangeDateDescriptorBackward"
                   Target="{Binding ElementName=DateEditTextBox, Mode=OneWay}"
                   Foreground="{DynamicResource InputFontColor}"
                   IsEnabled="{Binding IsControlEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <Label Grid.Column="1"
                   Margin="-6,0,0,0"
                   Content="{Binding DateDescriptor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="{DynamicResource InputFontColor}" />

        </Grid>

        <!-- TextBox Row -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBox TextWrapping="NoWrap"
                     x:Name="DateEditTextBox"
                     Width="135"
                     VerticalAlignment="Top"
                     Margin="5,0,0,0"
                     Text="{Binding Date, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource DateFormattingConverter}, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                     ToolTip=""
                     ToolTipOpening="ToolTip_DateTextBox"
                     IsEnabled="{Binding IsControlEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" />

            <!-- Optional CheckBox for IsLiving - only shown when ShowLivingCheckBox is true -->
            <CheckBox x:Name="LivingCheckBox"
                      Margin="10,0,0,0"
                      VerticalAlignment="Center"
                      Content="{Binding CheckBoxText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      Foreground="{DynamicResource InputFontColor}"
                      Grid.Column="1"
                      IsChecked="{Binding CheckBoxValue, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsControlEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                      Visibility="{Binding ShowCheckBox, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BoolToVisibilityConverter}}" />

        </Grid>
    </StackPanel>
</UserControl>
